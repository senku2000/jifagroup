<div class="col">
    <div class="car border-non mx-1">       
        <img src="{{assetsUrl(product.imageUrl)}}" style="height:225px;max-width:350px;" class="shadow rounded-lg">
        <div class="card-body text-center text-lg">
            <p class="card-title font-medium text-xl">
                {{product.name }}
            </p>
            <p class="card-text text-gray-600">{{product.description}}</p>
            <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group" >                                        
                    <button type="button" onclick="func('{{product.id}}')" class="p-2 btn-outline-secondar bg-color hover-bg-color border border-color text-white rounded-full" style="font-size:15px;">Ajouter au panier</button>                    
                </div>
                <small class="text-muted">{{product.price}} FCFA</small>
            </div>
        </div>
    </div>
</div>
